-- If you need to build 'kontrakcja' against an unreleased version of
-- some package, just add the path to that package's source directory
-- to 'packages'. For example, if you're working on both 'log' and
-- 'kontrakcja' at the same time, use
--
-- packages: . ../path/to/log

packages: .
write-ghc-environment-files: always

repository hackage.scrive.com
    url: http://hackage.scrive.com
    secure: False

package kontrakcja
    ghc-options: -fprint-potential-instances -j4 +RTS -A32m -RTS

    -- ^ Ideally we'd like to enable '+RTS -A32m' for all deps,
    -- however that triggers a rebuild of all deps due to
    -- https://github.com/haskell/cabal/issues/5575.

package text-icu
    extra-include-dirs: /usr/local/opt/icu4c/include
    extra-lib-dirs: /usr/local/opt/icu4c/lib

source-repository-package
  type: git
  location: https://github.com/scrive/hpqtypes-extras
  tag: b81ddb5ba7c684e8447b35a4f6136da4b8e46764

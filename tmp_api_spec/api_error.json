{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "api_error",
  "type": "object",
  "properties": {
    "error_type": {
      "type": "string",
      "enum": [
          "server_error"
        , "endpoint_not_found"
        , "invalid_authorisation"
        , "insufficient_privileges"
        , "resource_not_found"
        , "document_action_forbidden"
        , "request_parameters_missing"
        , "request_parameters_parse_error"
        , "request_parameters_invalid"
        , "document_object_version_mismatch"
        , "document_state_error"
        , "signatory_state_error"
        ]
    },
    "error_message" : {
      "type": "string"
    },
    "http_code" : {
      "type": "integer",
      "enum": [400, 401, 403, 404, 409, 500, 503]
    }
  },
  "required": [ "error_id", "message", "http_code" ]
}

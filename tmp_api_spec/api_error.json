{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "api_error",
  "type": "object",
  "properties": {
    "error": {
      "type": "object",
      "properties": {
        "error_id": {
          "type": "string",
          "enum": [
            "server_error"
          , "endpoint_not_found"
          , "invalid_authorisation"
          , "insufficient_privileges"
          , "document_access_forbidden"
          , "document_not_found"
          , "file_not_found"
          , "request_parameters_missing"
          , "request_parameters_parse_error"
          , "request_parameters_invalid"
          , "document_object_version_mismatch"
          , "document_state_error"
          , "signatory_state_error"
          ]
        },
        "message" : {
          "type": "string"
        },
        "http_code" : {
          "type": "integer",
          "enum": [400, 401, 403, 404, 409, 500, 503]
        },
        "http_code_name" : {
          "type": "string"
        }
      },
      "required": [ "error_id", "message", "http_code", "http_code_name" ]
    }
  },
  "required": [ "error" ]
}

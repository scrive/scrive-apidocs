{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "list_filter",
  "version": "0.0.1",
  "type": "array",
  "items": {
    "anyOf": [
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "status" ]
          },
          "status": {
            "type": "array",
            "items": {
              "$ref": "document_schema/definitions/document_status"
            }
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "mtime" ]
          },
          "range": {
            "type": "object",
            "properties": {
              "start": { "type": "string", "format": "date-time" },
              "end": { "type": "string", "format": "date-time" }
            }
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "tag" ]
          },
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "is_author" ]
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "is_signable_on_pad" ]
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "template" ]
          },
          "is_template": {
            "type": "boolean"
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "trash" ]
          },
          "is_trashed": {
            "type": "boolean"
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "author" ]
          },
          "user_id": {
            "type": "string"
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "user_can_sign" ]
          },
          "user_id": {
            "type": "string"
          }
        }
      },
      { "type": "object",
        "properties": {
          "filter_by": {
            "type": "string",
            "enum": [ "text" ]
          },
          "text": {
            "type": "string"
          }
        }
      }
    ]
  },
  "default": []
}

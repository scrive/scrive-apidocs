{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "localization": true,
    "mixpanel": true,
    "_gaq": true,
    "Cookies": true,
    "hbspt": true,
    "fromTemplate": true,
    "fromTemplateHeader": true,
    "fromTemplateFooter": true,
    "fromTemplateFlash": true,
    "fromTemplateHasFlash": true,
    "trackJs": true,
    "getLink": true,
    "hubspotConf": true,
    "APICallV1": true,
    "APICallParam": true,
    "LocalStorage": true,
    "APICalls": true,
    "ApiCallInstance": true,
    "Backbone": true,
    "$": true,
    "_": true,
    "AbstractAPICall": true,
    "Scrive": true,
    "ZeroClipboard": true,
    "Prism": true,
    "OAuth": true,
    "OAuthResourceOwnerAuthorization": true,
    "CredentialsView": true,
    "ApiDemoAuthorizeView": true,
    "ApiDemoExploreView": true,
    "OAuthRequest": true,
    "TextParamView": true,
    "BoolParamView": true,
    "JSONParamView": true,
    "FileParamView": true,
    "CallRequestView": true,
    "CallResponseView": true,
    "CallSelector": true,
    "OAuthTemporaryCredentialRequest": true,
    "OAuthTokenRequest": true
  },
  "parserOptions": {
    "sourceType":"module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-undef": "error",
    "quotes": [2, "double", {"avoidEscape": true, "allowTemplateLiterals": true}],
    "no-unused-vars": [0],
    "no-console": [0],
    "no-empty": ["error", {"allowEmptyCatch": true}],
    "array-bracket-spacing": ["error", "never"],
    "block-spacing": ["error", "always"],
    "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
    "camelcase": ["error", {"properties": "never"}],
    "comma-dangle": ["error", "never"],
    "comma-spacing": ["error", {"before": false, "after": true}],
    "comma-style": ["error", "last"],
    "computed-property-spacing": ["error", "never"],
    "key-spacing": ["error", {"beforeColon": false, "afterColon": true, "mode": "strict"}],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", 120],
    "no-multiple-empty-lines": ["error"],
    "no-spaced-func": ["error"],
    "no-trailing-spaces": ["error"],
    "no-whitespace-before-property": ["error"],
    "object-curly-spacing": ["error", "never"],
    "one-var-declaration-per-line": ["error", "always"],
    "one-var": ["error", "never"],
    "semi-spacing": ["error", {"before": false, "after": true}],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "space-in-parens": ["error", "never"],
    "space-infix-ops": ["error"],
    "unicode-bom": ["error", "never"]
  }
}
